    <Entry>
      <PointerOffset/>
      <JapaneseText>バンディ将軍</JapaneseText>
      <EnglishText/>
      <Notes/>
      <Id>2</Id>
      <Status>To Do</Status>
    </Entry>
    <Entry>
      <PointerOffset/>
